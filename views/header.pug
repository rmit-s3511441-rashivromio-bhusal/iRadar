doctype html
html(lang="en")
  head
    title= pageTitle
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/locale/en-au.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js")
    script(src="https://iradar-dev.appspot.com/BootstrapMenu.js")
    
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css")
    link(rel="stylesheet", href="https://iradar-dev.appspot.com/style.css")
    
    script(src="https://iradar-dev.appspot.com/listControls.js")
    script(src="https://iradar-dev.appspot.com/vailidators.js")
    
    // favicon stuff
    link(rel="apple-touch-icon", sizes="180x180", href="https://iradar-dev.appspot.com/apple-touch-icon.png")
    link(rel="icon", type="image/png", href="https://iradar-dev.appspot.com/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="https://iradar-dev.appspot.com/favicon-16x16.png", sizes="16x16")
    link(rel="manifest", href="https://iradar-dev.appspot.com/manifest.json")
    link(rel="mask-icon", href="https://iradar-dev.appspot.com/safari-pinned-tab.svg", color="#283593")
    meta(name="theme-color", content="#ffffff")
    
  body(id=pageId)
    .navbar.navbar-default.navbar-static-top
      .navbar-header
        .navbar-brand
          a(href="/home")
            img(src="https://iradar-dev.appspot.com/iRadarLogo.png", alt="iRadar Logo")
        button.navbar-toggle(type="button", data-toggle="collapse", data-target="#myNavbar")
          span.icon-bar
          span.icon-bar
          span.icon-bar
      .collapse.navbar-collapse(id="myNavbar")
        ul.nav.navbar-nav.navbar-links
          li
            a(href="/beacons") Beacons
          li
            a(href="/specials") Specials
          li
            a(href="/users") Users
          if user.role == 'admin'
            li
              a(href="/stores") Stores
            li
              a(href="/impressions") Hits
          li
            a(href="/reports") Reports
        
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            a.dropdown-toggle(id="avatar", href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false")
              if user.image
                img(src=user.image, alt=name)
              if !user.image
                span.initials= user.initials
              span.name= user.name
              span.caret
            ul.dropdown-menu
              li
                a(href=`/users/${user.id}/edit`) User Profile
              li
                a(href="/logout") Log out
              
    if info
      .container.alert-container
        .alert.alert-success.alert-dismissable
          a.close(href="#", data-dismiss="alert", aria-label="close") &times;
            strong= info