include header.pug
include list-header.pug
.container.list-view
  .table.table-responsive
    table.table.table-striped.table-bordered
      tr
        th.cbc
        th Username
        th First name
        th Last name
        th Email
        th Avatar
        th Store
        th Active
        th Updated on
          
      each user in users
        tr
          td.cbc
            input.list-selector(type="checkbox", data-for=user.id, onclick="listSelectorToggled()")
          td.filter(data-filter=`user_name=${user.user_name}`)
            a(href=`/users/${user.id}/edit`)= user.user_name
          td.filter(data-filter=`first_name=${user.first_name}`)= user.first_name
          td.filter(data-filter=`last_name=${user.last_name}`)= user.last_name
          td.filter(data-filter=`email=${user.email}`)= user.email
          if user.image
            td
              img(src=user.image, height="40", width="40", style="border: 1px solid transparent; border-radius: 20px;")
          if !user.image
            td
          td.filter(data-filter=`store=${user.store}`)
            a(href=`/stores/${user.store}/edit`)= user.store_dv
          td.filter(data-filter=`active=${user.active}`)= user.active_dv
          td.filter(data-filter=`updated_on=${user.updated_on}`)= user.updated_on_dv
  
include list-footer.pug
